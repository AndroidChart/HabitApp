<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bottom_border"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp"
    tools:ignore="MissingPrefix">


    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/habit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Go to Gym"
            android:inputType="textCapSentences"
            android:textAppearance="@style/Titles"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            >

            <TextView
                android:id="@+id/txt_days_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/days_comp"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txt_days_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/habit_name"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=" 25"
                android:textColor="@color/black"
                android:textSize="12dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_reminder_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/remider_lbl"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txt_reminder_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/habit_name"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=" 08:60 AM"
                android:textColor="@color/black"
                android:textSize="12dp" />


        </LinearLayout>



        />
    </LinearLayout>

</RelativeLayout>

